<div class="container-fluid heading-img">
  <h1 class="heading">Get Inspired</h1>
</div>

<div class="album py-5">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% newPosts.forEach (function(post) { %>
            <div class="col">
                <div class="card shadow">
                <!-- <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" preserveAspectRatio="xMidYMid slice" focusable="false"></svg> -->
                <a href="/posts/<%= post.title %>"><div class="home-img-div" style="
                  background-image: url('../uploads/<%= post.img %>');
                  "></div></a>
    
                <div class="card-body">
                    <h1><a href="/posts/<%= post.title %>"><%= post.title %></a></h1>
                    <p class="card-text fifty-chars"> <%= post.body %> </p>
                    <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group two-btns">
                      <form action="/posts/<%= post.title %>">
                        <button type="submit" class="btn btn-sm btn-outline-secondary view-btn-main">View</button>
                      </form>
                        <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
                    </div>
                    <small class="text-muted time-sig">0 mins</small>
                    </div>
                </div>
                </div>
            </div>
        <% }); %>
      </div>
    </div>
  </div>

<%- include('partials/footer') -%>